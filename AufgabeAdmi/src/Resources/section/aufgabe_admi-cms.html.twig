<div class="col-md4">
    <h3 style="text-align:center;">Discount Products</h3>
</div>

<div class="row cms-listing-row js-listing-wrapper">
    {% for item in emz_specials_collection.elements %}
        <div class="cms-listing-col col-sm-6 col-lg-4 col-xl-3">
            <div class="card product-box box-standard">
                <div class="card-body">
                    <div class="product-image-wrapper text-center">
                        <img src='https://i.picsum.photos/id/699/200/200.jpg?hmac=ueGvLUyOnWJ67372C4BTRRWlSCkroP0AtC9mSrj1Cis' alt='item'/>
                    </div>
                    <div class="product-info">
                        <a href="#" class="product-name" data-target="item{{ item.id }}">{{ item.name }}</a>
                        <div class="product-description" data-target="item{{ item.id }}">{{ item.text }}</div>
                        <div class="product-price-wrapper">
                            <div class="product-cheapest-price"></div>
                            From
                            <span class="product-price">â‚¬32*</span>
                        </div>
                    </div>
                    <div class="product-action">
                        <a href="#" class="btn btn-block btn-light">Details</a>
                    </div>
                </div>
            </div>

        </div>
    {% endfor %}


</div>